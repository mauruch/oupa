<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SOSActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:background="@drawable/border_sos"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleText"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="2"
            android:textSize="45sp"
            android:text="Enviando ayuda"/>

        <TextView
            android:id="@+id/countDownText"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:gravity="center"
            android:textSize="250sp"
            android:text="5"/>

        <TextView
            android:id="@+id/infoText"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:gravity="center"
            android:textSize="50sp"
            android:text="Enviamos su pedido de ayuda"/>

        <Button
            android:id="@+id/cancelSOSButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/panic"
            android:textColor="@color/white"
            android:layout_weight="2"
            android:textSize="30sp"
            android:text="Cancelar"
            />

        <Button
            android:id="@+id/redirectButton"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/panic"
            android:textColor="@color/white"
            android:layout_weight="2"
            android:textSize="30sp"
            android:text="Volver"
            />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>