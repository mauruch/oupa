<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fiuba.proyectosinformaticos.oupa">

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".pillbox.PillboxActivity"
            android:label="@string/title_activity_pillbox"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".pillbox.DrinkedPillActivity"
            android:label="@string/title_activity_drinked_pill"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".pillbox.NewPillStep1"
            android:label="@string/title_activity_new_pill_step1"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".pillbox.NewPillStep2"
            android:label="@string/title_activity_new_pill_step2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".pillbox.NewPillStep4"
            android:label="@string/title_activity_new_pill_step4"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>